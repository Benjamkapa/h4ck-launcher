<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="matrix_background">#000000</color>
    <color name="matrix_dark_green">#003300</color>
    <color name="matrix_green">#00FF00</color>
    <color name="white">#FFFFFF</color>
    <string name="splash_text">Welcome Back</string>
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/matrix_background</item>
        <item name="android:textColor">@color/matrix_green</item>
        <item name="android:fontFamily">monospace</item>
    </style>
    <style name="HomeTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode" ns1:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowBackground">@color/matrix_dark_green</item>
    </style>
    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/matrix_background</item>
    </style>
</resources>